<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_profit_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Profit per Product Report</h2>
                        <p>Period: <span t-field="doc.date_from"/> to <span t-field="doc.date_to"/></p>
                        <p>Generated: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/></p>
                        
                        <t t-set="profit_data" t-value="doc._get_profit_data()"/>
                        
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Qty Sold</th>
                                    <th>Revenue</th>
                                    <th>Cost</th>
                                    <th>Profit</th>
                                    <th>Margin %</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="total_revenue" t-value="0"/>
                                <t t-set="total_cost" t-value="0"/>
                                <t t-set="total_profit" t-value="0"/>
                                
                                <t t-foreach="profit_data" t-as="row">
                                    <t t-set="total_revenue" t-value="total_revenue + row['revenue']"/>
                                    <t t-set="total_cost" t-value="total_cost + row['cost']"/>
                                    <t t-set="total_profit" t-value="total_profit + row['profit']"/>
                                    <t t-set="margin" t-value="(row['profit'] / row['revenue'] * 100) if row['revenue'] > 0 else 0"/>
                                    
                                    <tr>
                                        <td><span t-esc="row['product_name']"/></td>
                                        <td><span t-esc="'%.2f' % row['qty_sold']"/></td>
                                        <td><span t-esc="'%.2f' % row['revenue']"/></td>
                                        <td><span t-esc="'%.2f' % row['cost']"/></td>
                                        <td><span t-esc="'%.2f' % row['profit']"/></td>
                                        <td><span t-esc="'%.1f' % margin"/>%</td>
                                    </tr>
                                </t>
                                
                                <tr class="font-weight-bold">
                                    <td>TOTAL</td>
                                    <td></td>
                                    <td><span t-esc="'%.2f' % total_revenue"/></td>
                                    <td><span t-esc="'%.2f' % total_cost"/></td>
                                    <td><span t-esc="'%.2f' % total_profit"/></td>
                                    <td><span t-esc="'%.1f' % ((total_profit / total_revenue * 100) if total_revenue > 0 else 0)"/>%</td>
                                </tr>
                            </tbody>
                        </table>
                        
                        <p class="text-muted mt-3">
                            <strong>Note:</strong> This report shows profit analysis for pharmaceutical products sold during the selected period.
                        </p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
