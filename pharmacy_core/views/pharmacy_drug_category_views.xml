<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Drug Category Tree View -->
        <record id="view_pharmacy_drug_category_tree" model="ir.ui.view">
            <field name="name">pharmacy.drug.category.tree</field>
            <field name="model">pharmacy.drug.category</field>
            <field name="arch" type="xml">
                <tree string="Drug Categories">
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="product_count"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Drug Category Form View -->
        <record id="view_pharmacy_drug_category_form" model="ir.ui.view">
            <field name="name">pharmacy.drug.category.form</field>
            <field name="model">pharmacy.drug.category</field>
            <field name="arch" type="xml">
                <form string="Drug Category">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(action_pharmacy_products)d"
                                    type="action"
                                    class="oe_stat_button"
                                    icon="fa-cubes"
                                    context="{'default_pharmacy_category_id': active_id, 'search_default_pharmacy_category_id': active_id}">
                                <field name="product_count" widget="statinfo" string="Products"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" 
                                invisible="active"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="parent_id"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Category description..."/>
                            </page>
                            <page string="Child Categories">
                                <field name="child_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="product_count"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Drug Category Search View -->
        <record id="view_pharmacy_drug_category_search" model="ir.ui.view">
            <field name="name">pharmacy.drug.category.search</field>
            <field name="model">pharmacy.drug.category</field>
            <field name="arch" type="xml">
                <search string="Search Drug Categories">
                    <field name="name" string="Category"
                           filter_domain="['|', ('name', 'ilike', self), ('complete_name', 'ilike', self)]"/>
                    <field name="parent_id"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Parent Category" name="group_parent" 
                                domain="[]" context="{'group_by': 'parent_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Drug Category Action -->
        <record id="action_pharmacy_drug_category" model="ir.actions.act_window">
            <field name="name">Drug Categories</field>
            <field name="res_model">pharmacy.drug.category</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pharmacy_drug_category_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first drug category
                </p>
                <p>
                    Organize your pharmaceutical products into categories for better management.
                </p>
            </field>
        </record>

    </data>
</odoo>
